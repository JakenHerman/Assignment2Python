import turtle

turtle = turtle.Turtle()
turtle.speed(3)


def circle(radius, cx = None, cy = None, color = 'black', fill = False):
    turtle.penup()
    turtle.goto(int(cx), int(cy))
    turtle.color(color)
    
    if fill is True:
        turtle.begin_fill()
        turtle.circle(radius = radius, extent = None, steps = None)
        turtle.end_fill()
    else:
        turtle.circle(radius = radius, extent = None, steps = None)
    return

